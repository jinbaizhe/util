<?xml version="1.0" encoding="UTF-8"?>

<configuration>

	<property name="log.name" value="util" />
	<property name="log.path" value="/opt/logs/util" />
	
	<!--console仅用于本地debug调试 -->
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%d{yyyy-MM-dd HH:mm:ss:SSS} [%t] [%level] [%X{invokeNo}]- %class:%line - %msg%n
			</pattern>
		</encoder>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%d{yyyy-MM-dd HH:mm:ss:SSS} [%t] [%level] [%X{invokeNo}]- %class:%line - %msg%n
			</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>
	<!--默认的应用日志输出 -->
	<appender name="all"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${log.path}/${log.name}.common.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${log.path}/${log.name}.common.%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%d{yyyy-MM-dd HH:mm:ss:SSS} [%t] [%level] [%X{invokeNo}]- %class:%line - %msg%n
			</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>
	<!--打印需要单独收集的业务数据，如面向报表、业务明细等需求 -->
	<appender name="report"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${log.path}/${log.name}.report.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>${log.path}/${log.name}.report.%i.log
			</fileNamePattern>
			<minIndex>1</minIndex>
			<maxIndex>5</maxIndex>
		</rollingPolicy>
		<triggeringPolicy
			class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>1GB</maxFileSize>
		</triggeringPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>

	<logger name="org.springframework" level="ERROR" />
	<logger name="com.atomikos" level="ERROR" /> 
	<!--<logger name="io.shardingjdbc.core.util.SQLLogger" level="ERROR" /> -->
	<logger name="org.apache.ibatis.logging.jdbc.BaseJdbcLogger" level="ERROR" />
	<!--<logger name="Sharding-JDBC-SQL" level="ERROR" /> -->
	<logger name="com.parker" level="INFO" />
	<!--<logger name="com.xxl.job.core.log.XxlJobLogger" level="ERROR" /> -->

	<logger name="report" level="INFO" additivity="false">
		<appender-ref ref="report" />
	</logger>

	<root>
		<level value="INFO" />
		<!--本地开发环境输出到console -->
		<!--<springProfile name="development">-->
			<appender-ref ref="stdout" />
		<!--</springProfile>-->
		<appender-ref ref="all" />
	</root>
</configuration>
